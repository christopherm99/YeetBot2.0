{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "es/2015/server",
        "plugin:prettier/recommended",
        "prettier",
        "plugin:promise/recommended",
        "plugin:sonarjs/recommended"
    ],
    "plugins": [
        "prettier",
        "promise",
        "sonarjs"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "func-style": "off",
        "dot-location": "off",
        "promise/always-return": "off",
        "promise/no-nesting": "off"
    }
}